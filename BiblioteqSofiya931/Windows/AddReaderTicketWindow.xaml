<Window x:Class="BiblioteqSofiya931.Windows.AddReaderTicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BiblioteqSofiya931.Windows"
        mc:Ignorable="d"
        Title="AddReaderTicketWindow"
        Height="250" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Читатель: "
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin=" 0 0 5 0"/>
        <ComboBox Grid.Column="1"
                  Height="20"
                  Width="100"
                  HorizontalAlignment="Left"
                  Name="ReaderCm"
                 
                  ItemsSource="{Binding readers}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Lastname}"/>
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text="{Binding Patronymic}"/>
                        <TextBlock Text="{Binding Phone}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox >
        <Button x:Name="AddReaderBtn"
                Height="25"
                Width="60"
                Content="Добавить"
                FontSize="10"
                Grid.Column="1"
                Margin=" 0 0 5 0"
                Click="AddReaderBtn_Click"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"/>
        <Button x:Name="UpdateBtn"
                Height="25"
                Width="60"
                Content="Обновить"
                FontSize="10"
                Grid.Column="1"
                Margin=" 0 0 5 0"
                Click="UpdateBtn_Click"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"/>
        <TextBlock Text="Сотрудник: "
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin=" 0 0 5 0"/>
        <ComboBox Grid.Column="1"
                  Grid.Row="1"
                  Height="20"
                  Name="EmployeeCm"
                  Width="100"
                  HorizontalAlignment="Left"
                  ItemsSource="{Binding employees}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Lastname}"/>
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text="{Binding Patronymic}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="SaveTicketBtn"
                Grid.ColumnSpan="2"
                Grid.Row="2"
                Height="35"
                Width="100"
                Content="Сохранить"
                Click="SaveTicketBtn_Click"/>
    </Grid>
</Window>
