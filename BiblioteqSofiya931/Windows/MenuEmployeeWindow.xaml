<Window x:Class="BiblioteqSofiya931.Windows.MenuEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BiblioteqSofiya931.Windows"
        mc:Ignorable="d"
        Title="MenuEmployeeWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/> 
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Source="\Resourse\EmployeeBibliot.jpg"
           Grid.ColumnSpan="2"
           Grid.RowSpan="2"/>
        <TextBlock Text="Иванов Иван Иванович"
               Grid.Row="2"
               Grid.ColumnSpan="2"
               FontSize="20"
               FontWeight="Bold"
               TextWrapping="Wrap"
               Padding=" 0 10 0 0"
               VerticalAlignment="Top"/>
        <TextBlock Text="Id: 00001"
               Grid.Row="2"
               Grid.ColumnSpan="2"
               FontSize="15"
               Foreground="Gray"
               Padding=" 0 0 0 20"
               VerticalAlignment="Bottom"/>
        <Button x:Name="readerBtn"
            Content="Читатели"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            FontSize="20"
            VerticalContentAlignment="Center"
            Background="Wheat"
            Click="readerBtn_Click"/>
        <Button x:Name="bookBtn"
            Content="Книги"
            Grid.Row="4"
            Grid.ColumnSpan="2"
            FontSize="20"
            VerticalContentAlignment="Center"
            Background="Wheat"
            Click="bookBtn_Click"/>
        <Button x:Name="reportBtn"
            Content="Отчеты"
            Grid.Row="5"
            Grid.ColumnSpan="2"
            FontSize="20"
            VerticalContentAlignment="Center"
            Background="Wheat"
            Click="reportBtn_Click"/>
        <Button x:Name="exitBtn"
            Content="ВЫХОД"
            Grid.Row="6"
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            FontSize="20"
            VerticalContentAlignment="Center"
            Background="DarkRed"
            Foreground="White"
            Click="exitBtn_Click"/>
        <Frame x:Name="menuFr"
               Grid.Column="2"
               Grid.ColumnSpan="6"
               Grid.RowSpan="8"/>
    </Grid>
</Window>
