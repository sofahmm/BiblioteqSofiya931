<Window x:Class="BiblioteqSofiya931.Windows.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BiblioteqSofiya931.Windows"
        mc:Ignorable="d"
        Title="AddBookWindow" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название книги"
                   FontSize="18"
                   HorizontalAlignment="Left"
                   Margin="20 0 0 0"
                   VerticalAlignment="Center"
                   Grid.ColumnSpan="3"/>
        <TextBox Grid.Row="1"
                 Grid.ColumnSpan="2"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 Margin="20 0 0 0"
                 Name="TitleTb"
                 Height="35"
                 FontSize="16"
                 VerticalContentAlignment="Center"
                 Width="200"/>
        <TextBlock Text="Автор"
                   FontSize="18"
                   HorizontalAlignment="Left"
                   Margin="20 0 0 0"
                   VerticalAlignment="Center"
                   Grid.Row="2"
                   Grid.ColumnSpan="3"/>
        <ComboBox Grid.Row="3"
                  Grid.ColumnSpan="2"
                  Width="200"
                  FontSize="16"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Left"
                  Margin="20 0 0 0"
                  Height="40"
                  ItemsSource="{Binding authors}"
                  Name="AuthorCm">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding LastName}"/>
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text="{Binding Patronymic}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Text="Дата издания"
                   Grid.Row="4"
                   HorizontalAlignment="Left"
                   Margin="20 0 0 0"
                   VerticalAlignment="Center"
                   Grid.ColumnSpan="2"
                   FontSize="18"/>
        <DatePicker Grid.Row="5"
                    FontSize="18"
                    Grid.ColumnSpan="2"
                    Name="DateMadeDp"
                    Height="35"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="20 0 0 0"
                    Width="200"/>

        <TextBlock Text="Издательство"
                   Grid.ColumnSpan="2"
                   Grid.Row="6"
                   HorizontalAlignment="Left"
                   Margin="20 0 0 0"
                   VerticalAlignment="Center"
                   FontSize="18"/>
        <ComboBox Grid.Row="7"
                  Grid.ColumnSpan="2"
                  Width="200"
                  Height="40"
                  FontSize="16"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Left"
                  Margin="20 0 0 0"
                  ItemsSource="{Binding builds}"
                  Name="CreatorBuildCm">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Text="Жанр книги"
                   Grid.Row="0"
                   Grid.Column="3"
                   FontSize="18"
                   HorizontalAlignment="Left"
                   Margin="20 0 0 0"
                   VerticalAlignment="Center"
                   Grid.ColumnSpan="2"/>
        <ComboBox Grid.Row="1"
                  Grid.Column="3"
                  Grid.ColumnSpan="2"
                  Width="200"
                  Height="40"
                  FontSize="16"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Left"
                  Margin="20 0 0 0"
                  ItemsSource="{Binding janrs}"
                  Name="JanrCm">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Text="Количество страниц"
                   Grid.Row="2"
                   Grid.Column="3"
                   FontSize="18"
                   HorizontalAlignment="Left"
                   Margin="20 0 0 0"
                   VerticalAlignment="Center"
                   Grid.ColumnSpan="2"/>
        <TextBox Grid.Row="3"
                 Grid.Column="3"
                 Grid.ColumnSpan="2"
                 Height="35"
                 Name="CountPagesTb"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 Margin="20 0 0 0"
                 FontSize="16"
                 VerticalContentAlignment="Center"
                 Width="200"/>
        <TextBlock Text="Зал"
                   Grid.Row="4"
                   Grid.Column="3"
                   FontSize="18"
                   HorizontalAlignment="Left"
                   Margin="20 0 0 0"
                   VerticalAlignment="Center"
                   Grid.ColumnSpan="2"/>
        <ComboBox Grid.Row="5"
                  Grid.Column="3"
                  Grid.ColumnSpan="2"
                  Width="200"
                  Height="40"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Left"
                  Margin="20 0 0 0"
                  FontSize="16"
                  ItemsSource="{Binding halls}"
                  Name="HallCm">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Text="Полка"
                   Grid.Row="6"
                   Grid.Column="3"
                   FontSize="18"
                   Grid.ColumnSpan="2"
                   Margin="20 0 0 0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"/>
        <TextBox Grid.Row="6"
                 Grid.Column="3"
                 Grid.ColumnSpan="2"
                 Height="35"
                 Width="70"
                 Name="ShelfTb"
                 FontSize="16"
                 TextChanged="ShelfTb_TextChanged"
                 VerticalContentAlignment="Center"
                 VerticalAlignment="Center"
                 Margin="0 0 20 0"
                 HorizontalAlignment="Right"/>

        <Button x:Name="SaveBook"
                Click="SaveBook_Click"
                Content="Сохранить"
                Grid.Column="3"
                Grid.ColumnSpan="2"
                Grid.Row="7"
                Height="40"
                Width="100"
                FontSize="16"/>
    </Grid>
</Window>
