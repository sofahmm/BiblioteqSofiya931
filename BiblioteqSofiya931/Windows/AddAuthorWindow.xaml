<Window x:Class="BiblioteqSofiya931.Windows.AddAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BiblioteqSofiya931.Windows"
        mc:Ignorable="d"
        Title="AddAuthorWindow" Height="400" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Фамилия"
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="24"/>
        <TextBlock Text="Имя"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Grid.Row="1"
                   FontSize="24"/>
        <TextBlock Text="Отчество"
                   Grid.Row="2"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontSize="24"/>

        <TextBox Grid.Column="1"
                 Name="LastNameTb"
                 Height="45"
                 HorizontalAlignment="Left"
                 Margin="10 0 0 0"
                 FontSize="20"
                 VerticalContentAlignment="Center"
                 Width="200"/>
        <TextBox Grid.Column="1"
                 Grid.Row="1"
                 Name="NameTb"
                 Height="45"
                 FontSize="20"
                 VerticalContentAlignment="Center"
                 HorizontalAlignment="Left"
                 Margin="10 0 0 0"
                 Width="200"/>
        <TextBox Grid.Column="1"
                 Grid.Row="2"
                 Name="PatronymicTb"
                 Height="45"
                 FontSize="20"
                 VerticalContentAlignment="Center"
                 HorizontalAlignment="Left"
                 Margin="10 0 0 0"
                 Width="200"/>
        <Button x:Name="SaveAuthorBtn"
                Click="SaveAuthorBtn_Click"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Height="50"
                Width="120"
                Content="Сохранить"
                FontSize="20"/>
    </Grid>
</Window>
