<Window x:Class="BiblioteqSofiya931.Windows.ReadersListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BiblioteqSofiya931.Windows"
        mc:Ignorable="d"
        Title="ReadersListWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="SearchReadersTb"
                 Grid.ColumnSpan="2"
                 Margin="10"
                 FontSize="20"
                 Padding="3 0 0 0"
                 VerticalAlignment="Center"
                 TextChanged="SearchReadersTb_TextChanged"/>
        <DatePicker Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="10"
                    x:Name="BirthDateDp"
                    SelectedDateChanged="BirthDateDp_SelectedDateChanged"/>
        <Button x:Name="EditReaderBtn"
                Click="EditReaderBtn_Click"
                Content="Редактировать читателя"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Margin="10"/>
        <Button x:Name="DeleteReadreBtn"
                Click="DeleteReadreBtn_Click"
                Content="Удалить читателя"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Margin="10"/>


        <ListView Grid.ColumnSpan="6"
                  Grid.Column="2"
                  Grid.RowSpan="8"
                  x:Name="ReadersLv"
                  ItemsSource="{Binding readers}"
                  MouseDown="ReadersLv_MouseDown">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="ID"
                                Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ID}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Фамилия"
                                Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Lastname}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Имя"
                                Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Отчество"
                                Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Patronymic}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Дата рождения"
                                Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Birthdate, StringFormat=dd.MM.yyyy}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Номер телефона"
                                Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Phone}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
