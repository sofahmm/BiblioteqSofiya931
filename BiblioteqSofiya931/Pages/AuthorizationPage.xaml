<Page x:Class="BiblioteqSofiya931.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BiblioteqSofiya931.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Авторизация"
                   FontSize="35"
                   VerticalAlignment="Center"
                   Grid.Column="2"
                   Grid.ColumnSpan="2"
                   TextAlignment="Center"/>
        <TextBlock Text="ЛОГИН"
                   FontSize="18"
                   Grid.Column="2"
                   Grid.Row="1"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"/> 
        <TextBox x:Name="loginTb"
                 Grid.Column="2"
                 Grid.Row="1"
                 Grid.ColumnSpan="2"
                 Height="50"
                 VerticalContentAlignment="Center"
                 FontSize="22"
                 Padding="5"/>
        <TextBlock Text="ПАРОЛЬ"
                   FontSize="18"
                   Grid.Column="2"
                   Grid.Row="2"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordTb"
                     Grid.Column="2"
                     Grid.Row="2"
                     Grid.ColumnSpan="2"
                     Height="50"
                     VerticalContentAlignment="Center"
                     FontSize="22"
                     Padding="5"/>
        <Button x:Name="loginBtn"
                Grid.Column="2"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Height="60"
                Width="180"
                Content="ВОЙТИ"
                Click="loginBtn_Click"/>
        <Button x:Name="loginReaderBtn"
                Grid.Column="5"
                Grid.Row="3"
                Height="60"
                Width="180"
                FontSize="15"
                Content="вход для читателя"
                Click="loginReaderBtn_Click"/>
    </Grid>
</Page>
